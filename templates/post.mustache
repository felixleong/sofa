<!DOCTYPE html>
<html>
  <head>
    <title>{{title}} : {{blogName}}</title>
    <link href="{{assets}}/style/screen.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    {{>header}}
    <div id="content">
      <h1>{{title}}</h1>
      <div id="post">
        <span class="date">{{date}}</span>
        <div class="body">{{{html}}}</div>
      </div>
      <div id="tags"></div>
      <div id="comments">
      <ul>
        {{#comments}}{{>comment}}{{/comments}}
      </ul>
      <div id="profile"></div>
      </div>
    </div>
    {{>footer}}
    <script type="text/javascript" charset="utf-8">
    $.couch.app(function(app) {
      app.post_id = '{{post_id}}';
      $('#profile').evently(
        $.extend(true, {}, app.ddoc.vendor.couchapp.evently.profile, app.ddoc.evently.profile),
        app);
      $.evently.connect($('#account'), $('#profile'), ['loggedIn', 'loggedOut']);
    });
    </script>
  </body>
</html>
